<figure>
    <h1><%= current_picture.title %> </h1>
    <img src="<%= current_picture.get_picture_path %>" alt="<%=current_picture.filename %>" height = "600" width = "462">
        <figcaption> <%= current_picture.caption %> </figcaption><br>
    <%= current_picture.description %>
</figure>
<br>
<% if pet_owner? || animal_shelter? %>
    <p><a href="/pictures/<%= current_picture.id %>/edit">Edit picture information</a></p><br>
<% end %>
<button type="submit" onclick='window.location.href="/pets/<%= current_pet.id %>";'>Go Back</button>
